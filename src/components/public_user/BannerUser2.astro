    }
    #card_pays {
        display: none;
    }
    #contentTarget {
        color: white;
    }
    .m-auto {
        color: white;
    }
    .logo-white {
        filter: brightness(0) invert(1);
    }
    @keyframes rotate {
        0% {
            transform: rotateY(180deg);
        }
        100% {
            transform: rotateY(0);
        }
    }

    @media (max-width 620px;) {
        #contentTarget,
        #card_pays {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            padding: 1rem;
        }
        .h-14,
        .h-12 {
            width: 50%;
            margin-bottom: 1rem;
        }
        .text-xl {
            font-size: 1.5rem;
        }
        .text-lg {
            font-size: 1.2rem;
        }
    }
    @media (max-width: 1160px) {
        #security {
            grid-column: span 1 / 1 span;
        }
    }

    @media (max-width: 1024px) {
        #security {
            grid-column: span 2 / 2 span;
        }

        #credit {
            grid-column: span 2 / 2 span;
        }
    }

    @media (max-width: 830px) {
        #welcome h1 {
            font-size: 1.7rem;
        }
    }

    @media (max-width: 640px) {
        #security {
            grid-column: span 4 / 4 span;
        }

        #credit {
            grid-column: span 4 / 4 span;
        }
    }

    @media (max-width: 550px) {
        #welcome {
            grid-column: span 4 / 4 span;
        }

        #make_loan {
            grid-column: span 4 / 4 span;
        }

        #card_balance {
            display: flex;
            grid-column: span 4 / 4 span;
        }

        #card_pays {
            display: flex;
            grid-column: span 4 / 4 span;
        }

        #card_pays_principal {
            display: none;
        }

        #card_balance_principal {
            display: none;
        }
    }
</style>

