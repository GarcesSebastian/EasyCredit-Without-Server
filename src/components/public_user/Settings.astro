<section class = "mainContainer">
    <div class="closeConfig"></div>
    <div class = "menuConfig">
        <div class="gestionCueta">
            <button class="btn-gestionar-cuenta">Gestion de Cuenta</button>
            <div class="subGestionCuenta">
