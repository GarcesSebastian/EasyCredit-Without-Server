                <button class="btnSubNotis">Activar autenticación de Dos factores</button>
                <button class="btnSubNotis">Eliminar cuenta</button>
            </div>
        </div>

        <div class = "preferenciaNotis">
            <button class="btn-referencias-notificaciones">Preferencias de Notificaciones</button>
            <div class="subPreferenciaNotis">
                <button class="btnSubNotis">Recibir notificaciones al e-mail</button>
                <button class="btnSubNotis">Recibir notificaciones por mensaje</button>
                <button class="btnSubNotis">Recibir notificaciones en el dispositivo</button>
            </div>
        </div>

        <div class="gestionNotis">
            <button class="btn-gestionar-notificaciones">Gestionar Notificaciones</button>
