<style>
    /*Estilos para la tabla */
    .text-h2{
        color: white;
    }
    table {
        width: 100%;
        background-color: #fff;
    }
    table, th, td {
        border: 1px solid black;
    }
    th, td {
        padding: 8px;
        text-align: left;
    }
    th {
        background-color: #0058a3;
        color: #fff;
    }

    /*Fin de estilos de la talba */

    .container-image {
        width: 30rem;
        height: 100%;
        background-image: url("../../public/background/giro.png");
        background-position: center;
        background-repeat: no-repeat;
        background-size: contain;
    }

    .simulador-container {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-template-rows: repeat(2, 1fr);
        gap: 22px;
        max-width: 800px;
        margin: 0% auto;
        margin-bottom: 90px;
    }
    .input-with-icon {
        display: flex;
        align-items: center;
        width: 100%;
        color: white;
    }

    .input-with-icon svg {
        margin-left: 10px;
    }

    .input-box input {
        width: calc(100% - 24px);
    }
    .input-box {
        padding: 20px;
        border-radius: 10px;
        --tw-shadow-color: #111827;
        --tw-shadow-colored: 0 10px 15px -3px var(--tw-shadow-color),
            0 4px 6px -4px var(--tw-shadow-color);
        --tw-shadow: var(--tw-shadow-colored);
        box-shadow: var(--tw-ring-offset-shadow, 0 0 #0000),
            var(--tw-ring-shadow, 0 0 #0000), var(--tw-shadow);
        background-color: rgb(30, 41, 59);
    }

    input::placeholder {
        color: rgb(0, 0, 0);
    }

    .input-box label {
        display: block;
        margin-bottom: 10px;
        font-weight: bold;
        color: rgb(255, 255, 255);
    }

    .calc-buttons {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        margin-top: 20px;
        grid-column: 1 / span 2;
        grid-row: 3;
    }

    .calculate-btn {
        padding: 10px 10px;
        border: 2px solid rgb(0, 60, 255);
        border-radius: 7px;
        background-color: blue;
        color: rgb(0, 0, 0);
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .calculate-btn:hover {
        background-color: rgb(255, 210, 11);
        color: rgb(34, 34, 255);
    }

    .input-box input,
    .input-box select {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #000000;
        background-color: rgb(32, 82, 158);
    }

    .input-box {
        width: 100%;
    }

    @media (width > 640px) {
        .list-options li:not(.list-options li:last-child) {
            border-right: 2px solid #ccc;
        }
    }

    @media (width < 640px) {
        .list-options li:not(.list-options li:last-child) {
            border-bottom: 2px solid #ccc;
        }
    }

    @media (max-width: 1280px) {
        .container-image {
            width: 25rem;
        }
    }

    @media (max-width: 1080px) {
        .container-image {
            width: 20rem;
        }
    }

    @media (max-width: 880px) {
        .container-image {
            width: 15rem;
            height: 15rem;
        }
    }
</style>
